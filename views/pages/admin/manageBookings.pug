extends ../../base

block append head
  link(rel="stylesheet" href="/css/layout/user-view.css")
  link(rel="stylesheet" href="/css/pages/manageBookings.css")

block content
  main.main
    .user-view
      include ../../_sidenav
      
      .user-view__content
        .user-view__bookings-container
          h2.heading-secondary.ma-bt-md Manage Bookings
          
          // Search and Filter Section
          .booking-controls
            .search-box
              input#searchBooking.form__input(type='text', placeholder='Search by booking ID or user email...')
            .filter-box
              select#statusFilter.form__input
                option(value='') All Status
                option(value='true') Paid
                option(value='false') Unpaid
            .date-filter
              label.form__label(for='startDate') Dates:
              input#startDateFrom.form__input(type='date')
              span to
              input#startDateTo.form__input(type='date')
              
          // Bookings Table
          .booking-table
            table.table
              thead
                tr
                  th Booking ID
                  th User
                  th Tour
                  th Start Date
                  th Participants
                  th Total Price
                  th Status
                  th Actions
              tbody#bookingTableBody
                // Bookings will be populated here via JavaScript
  
          // Pagination
          .pagination
            button.btn.btn--small#prevPage Previous
            span#pageInfo Page 1 of 1
            button.btn.btn--small#nextPage Next
  
          // Edit Booking Modal
          .modal#bookingModal
            .modal-content
              span.close-modal &times;
              h3#modalTitle Edit Booking
              form#bookingForm.form
                .form__group
                  label.form__label(for='startDate') Start Date
                  input#startDate.form__input(type='date', required)
                .form__group
                  label.form__label(for='numParticipants') Number of Participants
                  input#numParticipants.form__input(type='number', required, min='1')
                .form__group
                  label.form__label(for='price') Price
                  input#price.form__input(type='number', required, step='0.01')
                .form__group
                  label.form__label(for='paid') Payment Status
                  select#paid.form__input
                    option(value='true') Paid
                    option(value='false') Unpaid
                .form__group.right
                  button.btn.btn--small.btn--green(type='submit') Save Changes