extends base

block append head
  link(rel="stylesheet" href="/css/review.css")

block content
  .review-container
    h1 Write a Review

    form(method="POST" action=`/reviews/${tourId}`)
      .form-group
        label(for="rating") Rating:
        select#rating(name="rating" required)
          option(value="") Select your rating
          option(value="1") 1
          option(value="2") 2
          option(value="3") 3
          option(value="4") 4
          option(value="5") 5

      .form-group
        label(for="review") Your Review:
        textarea#review(name="review", rows="5", minlength="10", maxlength="300", required)

      button.btn.btn--green(type="submit") Submit Review
