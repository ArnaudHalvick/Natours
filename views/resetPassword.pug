extends base

block append head
  link(rel="stylesheet", href="/css/pages/resetPassword.css")

block content
  .container
    form.reset-password-form#resetPasswordForm
      h2.heading-secondary.ma-bt-lg Reset Your Password
      .form__group
        label.form__label(for="password") New Password
        input.form__input#password(type="password", required)
      .form__group
        label.form__label(for="passwordConfirm") Confirm New Password
        input.form__input#passwordConfirm(type="password", required)
      .form__group.form__btns
        button.btn.btn--green(type="submit") Update Password
