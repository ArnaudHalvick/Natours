header.header
    nav.nav.nav--tours
        a.nav__el(href="/") All tours
        form.nav__search
            button.nav__search-btn
                svg
                    use(xlink:href="/img/icons.svg#icon-search")
            input.nav__search-input(type="text" placeholder="Search tours")
    .header__logo
        img(src="/img/logo-white.png" alt="Natours logo")
    nav.nav.nav--user
        if user
            a.nav__el(href="/my-tours") My bookings
            a.nav__el(href="/me")
                img.nav__user-img(src=`/img/users/${user.photo}`, alt=`${user.name}`)
                span= user.name
            a.nav__el(href="/api/v1/users/logout").nav__el--logout Log out
        else
            a.nav__el(href="/login") Log in
            a.nav__el(href="/signup").nav__el--cta Sign up
