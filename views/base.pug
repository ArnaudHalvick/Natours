doctype html
html(lang="en")
  head
    block head
      meta(charset="UTF-8")
      meta(name="viewport", content="width=device-width, initial-scale=1.0")

      link(href="https://fonts.googleapis.com/css?family=Lato:300,300i,700" rel="stylesheet")
      
      //- Base styles
      link(rel="stylesheet" href="/css/base/reset.css")
      link(rel="stylesheet" href="/css/base/typography.css")
      link(rel="stylesheet" href="/css/base/utilities.css")
      
      //- Components used everywhere
      link(rel="stylesheet" href="/css/components/buttons.css")
      link(rel="stylesheet" href="/css/components/alerts.css")
      link(rel="stylesheet" href="/css/components/navigation.css")
      
      //- Layouts used in base template
      link(rel="stylesheet" href="/css/layout/header.css")
      link(rel="stylesheet" href="/css/layout/footer.css")
      link(rel="stylesheet" href="/css/layout/grid.css")
      
      link(rel="shortcut icon" type="image/png" href="/img/favicon.png")
      title Natours | #{title}

      script(src="https://js.stripe.com/v3/")

  body(data-alert=`${alert ? alert : ""}`)
    // HEADER
    include _header

    // CONTENT
    block content
      h1 this is a placeholder
   
    // FOOTER
    include _footer
    script(src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.4/axios.min.js")
    script(src='/js/bundle.js' defer)