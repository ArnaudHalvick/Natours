mixin sideNavItem(icon, text, href, active=false)
  li(class=active ? 'side-nav--active' : '')
    a(href=href)
      svg
        use(xlink:href=`/img/icons.svg#icon-${icon}`)
      | #{text}

nav.user-view__menu
  ul.side-nav
    +sideNavItem('settings', 'Settings', '/me')
    +sideNavItem('briefcase', 'My bookings', '/my-tours') 
    +sideNavItem('star', 'My reviews', '/my-reviews')
    +sideNavItem('credit-card', 'Billing', '/billing', true)

  if user.role === 'admin' || user.role === 'lead-guide'
    .admin-nav
      h5.admin-nav__heading Admin
      ul.side-nav
        +sideNavItem('map', 'Manage tours', '/manage-tours')
        +sideNavItem('users', 'Manage users', '/manage-users') 
        +sideNavItem('star', 'Manage reviews', '/manage-reviews')
        +sideNavItem('briefcase', 'Manage bookings', '/manage-bookings')
        +sideNavItem('credit-card', 'Manage refunds', '/manage-refunds')